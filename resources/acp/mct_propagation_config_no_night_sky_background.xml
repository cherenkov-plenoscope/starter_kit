<propagation>
    <!--  -->
    <night_sky_background_ligth exposure_time="50e-9">
        <function name="nsb_flux_vs_wavelength" comment="
            Almost no flux. The night sky brightness is deactivated here.
            In Photons/(sr s m^2 m), last 'm' is for the wavelength wavelength[m] flux[1/(s m^2 sr m)">
            <linear_interpolation>
                <xy x="250.0e-9"  y="1.0"/>  
                <xy x="700.0e-9" y="1.0"/>  
            </linear_interpolation>
        </function> 
    </night_sky_background_ligth>

    <photo_electric_converter dark_rate="1e-3" probability_for_second_puls="0.0">
        <function name="pde_vs_wavelength" comment="
            CTA LST PMT
            Hamamatsu
            R11920-100-05
            Collection efficiency assumed: 0.95
            Novel Photo Multiplier Tubes for the Cherenkov Telescope Array Project
            ICRC 2013, Takeshi Toyama
            wavelength[m] pde[1]">
            <linear_interpolation>
                <!--xy x="200e-9"  y="0.0"/-->
                <!--xy x="220e-9"  y="0.0149"/-->
                <xy x="240e-9"  y="0.0673"/>
                <xy x="260e-9"  y="0.1812"/>
                <xy x="280e-9"  y="0.2758"/>
                <xy x="300e-9"  y="0.3686"/>
                <xy x="320e-9"  y="0.3866"/>
                <xy x="340e-9"  y="0.3975"/>
                <xy x="360e-9"  y="0.4017"/>
                <xy x="380e-9"  y="0.4083"/>
                <xy x="400e-9"  y="0.4010"/>
                <xy x="420e-9"  y="0.3764"/>
                <xy x="440e-9"  y="0.3576"/>
                <xy x="460e-9"  y="0.3143"/>
                <xy x="480e-9"  y="0.2782"/>
                <xy x="500e-9"  y="0.2480"/>
                <xy x="540e-9"  y="0.1257"/>
                <xy x="580e-9"  y="0.0837"/>
                <xy x="620e-9"  y="0.0396"/>
                <xy x="660e-9"  y="0.0107"/>
                <xy x="701e-9"  y="0.0001"/>
                <!--xy x="750e-9"  y="0.0"/-->
            </linear_interpolation>
        </function>  
    </photo_electric_converter>
    <photon_stream
        slice_duration="0.5e-9"
    />
    <settings
        max_number_of_interactions_per_photon="10"
        use_multithread_when_possible="false"
    />
</propagation>
